# Production Environment Variables for Digital Ocean
# Copy this to .env in production and fill with real values

# Django Core
SECRET_KEY=your-super-secret-production-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=your-domain.com,your-app.ondigitalocean.app

# Database (Digital Ocean Managed Database or Database Cluster)
DATABASE_URL=postgis://username:password@host:port/database_name
# Example: postgis://monitor_user:secure_password@db-postgresql-nyc1-12345.ondigitalocean.com:25060/monitor_infantil_db?sslmode=require

# Redis (Digital Ocean Managed Redis or Redis Cluster)
REDIS_URL=redis://username:password@host:port/0
# Example: redis://default:password@db-redis-nyc1-12345.ondigitalocean.com:25061/0

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Static/Media Files - Digital Ocean Spaces (Optional)
USE_DIGITALOCEAN_SPACES=False
SPACES_ACCESS_KEY_ID=your-spaces-access-key
SPACES_SECRET_ACCESS_KEY=your-spaces-secret-key
SPACES_BUCKET_NAME=your-bucket-name
SPACES_REGION=nyc3

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# CORS for mobile app
CORS_ALLOWED_ORIGINS=https://your-mobile-app-domain.com,https://your-web-domain.com

# Firebase (Push Notifications)
FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# GIS Libraries (usually auto-detected in production)
GDAL_LIBRARY_PATH=/usr/lib/libgdal.so
GEOS_LIBRARY_PATH=/usr/lib/libgeos_c.so

# Geolocation
DEFAULT_SRID=4326