# ===============================================
# GPS Tracker Worker - Environment Variables
# ===============================================
# Copiar este archivo a .env y configurar los valores reales

# -----------------------------------------------
# Django Backend Configuration
# -----------------------------------------------

# URL del endpoint de ingesta GPS
# Desarrollo local (sin Docker): http://localhost:8000/api/ingesta/gps-chino/
# Docker Compose (mismo network): http://web_backend:8000/api/ingesta/gps-chino/
# Producción: https://tu-dominio.com/api/ingesta/gps-chino/
API_URL=http://localhost:8000/api/ingesta/gps-chino/

# -----------------------------------------------
# GPS Device Configuration
# -----------------------------------------------

# IMEI del dispositivo GPS (debe coincidir con Nino.dispositivo_id en BD)
# Ejemplo: 862104056214397
DEVICE_IMEI=

# Intervalo de polling en segundos (default: 30s)
# Valores recomendados: 30-60 segundos
POLLING_INTERVAL=30

# -----------------------------------------------
# Chinese GPS API Configuration (GF21)
# -----------------------------------------------

# URL base de la API del proveedor GPS
# Ejemplo: http://api.gf21tracker.com o https://gps.tuproveedor.com
CHINESE_API_URL=

# Token de autenticación de la API china
# Obtener del panel de control del proveedor GPS
CHINESE_API_TOKEN=

# ID del dispositivo en el sistema del proveedor
# Puede ser diferente al IMEI
CHINESE_API_DEVICE_ID=

# -----------------------------------------------
# Advanced Settings (Opcional)
# -----------------------------------------------

# Máximo de reintentos antes de detener el worker
MAX_RETRIES=5

# Tiempo de espera entre reintentos (segundos)
RETRY_DELAY=10

# Nivel de logging: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------
# Production Settings (Solo Producción)
# -----------------------------------------------

# Habilitar HTTPS para API calls
# USE_HTTPS=true

# API Key para autenticación del worker (si se implementa)
# API_KEY=

# Sentry DSN para monitoreo de errores (opcional)
# SENTRY_DSN=
